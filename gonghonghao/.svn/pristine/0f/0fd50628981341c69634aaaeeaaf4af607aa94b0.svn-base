<template>
  <div class="partnerApply">
    <div>
      <van-field label="姓名" v-model="partnerName" placeholder="请输入姓名" />
      <van-field label="电话号码" type="tel" v-model="telephone" placeholder="请输入电话号码" />
      <van-field label="银行卡号" v-model="partnerBankCard" placeholder="请输入银行卡号" />
      <div class="partner-apply-img">
        <div class="partner-apply-title">身份证正面</div>
        <van-uploader :after-read="afterRead" v-model="fileList" :before-delete="deleteRead" :max-count="1"/>
      </div>
      <div class="partner-apply-img">
        <div class="partner-apply-title">身份证反面</div>
        <van-uploader :after-read="afterRead1" v-model="fileList1" :before-delete="deleteRead1" :max-count="1"/>
      </div>
    </div>
    <div class="fixed-btn">
      <div class="btn">
        <van-button type="info" block @click="onSubmit">提交</van-button>
      </div>
    </div>
    <van-loading size="24px" vertical v-if='myLoading'>上传中...</van-loading>
    <van-overlay :show="show" :z-index='9999999' />
  </div>
</template>

<script>
import api from '../../api/index.js'
import commonUtil from '@/assets/js/commonUtil.js';
import { Loading } from 'vant';
import { Overlay } from 'vant';
export default {
  name: 'partnerApply',
  data(){
    return{
      publicPath: process.env.BASE_URL,
      partnerName:'',     //用户名
      telephone:'',       //手机号
      partnerBankCard:'', //银行卡号
      ifPositive:'',
      ifOpposite:'',
      fileList:[],
      fileList1:[],
      shareUserId: '',
      myLoading:false,
      show: false
    }
  },
  created() {
    this.shareUserId = commonUtil.parseUrlParams('shareUserId')
  },
  methods: {
    afterRead(file) {
      this.myLoading = true;
      this.show = true;
      // 身份证正面
      var formData = new FormData();
      formData.append('file', file.file)
      var that = this;
      api.uploadImg(formData).then(res => {
        if(res.code == 200){
          that.ifPositive = res.data;
          that.myLoading = false;
          that.show = false;
        }else{
          that.fileList = [];
          that.$toast(res.message)
          that.myLoading = false;
          that.show = false;
        }
      })
    },
    //删除图片
    deleteRead(){
      this.ifPositive = '';
      return true;
    },
    afterRead1(file) {
      // 身份证反面
      this.myLoading = true;
      this.show = true;
      var formData = new FormData();
      formData.append('file', file.file)
      var that = this;
      api.uploadImg(formData).then(res => {
        if(res.code == 200){
          that.ifOpposite = res.data;
          that.myLoading = false;
          that.show = false;
        }else{
          that.fileList1 = [];
          that.$toast(res.message)
          that.myLoading = false;
          that.show = false;
        }
      })
    },
    //删除图片
    deleteRead1(){
        this.ifOpposite = '';
        return true;
    },

    onSubmit() {
        var that = this;
        if (!this.partnerName) {
          this.$toast("请输入姓名");
          return;
        }
        if (!this.telephone) {
          this.$toast("请输入手机号");
          return;
        }
        if (!(/^1[34578]\d{9}$/.test(this.telephone))) {
          this.$toast("手机号格式有误");
          return;
        }        
        if (!this.partnerBankCard) {
          this.$toast("请输入银行卡号");
          return;
        }
        if(!this.ifPositive){
          this.$toast("请上传身份证正面照");
          return;
        }
        if(!this.ifOpposite){
           this.$toast("请上传身份证反面照");
          return;
        }
        var datali = {
            partnerName:this.partnerName,
            telephone:this.telephone,
            partnerBankCard:this.partnerBankCard,
            idCardImageFront:this.ifPositive,
            idCardImageBack:this.ifOpposite,
            shareUserId:this.shareUserId
        }

        api.applyAdd(datali).then(res => {
        if(res.code == 200){
          that.$toast({
            message: res.msg,
            duration: 800,
            onClose: function () {
              that.$router.push({ path: '/personal'})
            }
          });
        }else{
          that.$toast(res.msg)
        }
      })
    }
  }
}
</script>
